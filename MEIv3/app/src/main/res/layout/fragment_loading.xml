<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true">

    <WebView
        android:id="@+id/wb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/meilogo" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:foregroundTint="@android:color/background_light"
        android:indeterminate="true"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="@android:color/holo_blue_bright"
        android:translationY="-7dp" />

    <ImageView
        android:id="@+id/ivDisconnect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/logoView"
        android:layout_centerHorizontal="true"
        android:alpha=".3"
        android:contentDescription="@string/offline"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_offline" />

</RelativeLayout>